{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Effect": "Allow",
			"Action": [
				"ec2:AttachVolume",
				"ec2:DeleteVolume",
				"ec2:DescribeVolumeStatus",
				"ec2:CancelSpotFleetRequests",
				"ec2:CreateTags",
				"ec2:DescribeVolumes",
				"ec2:CreateSnapshot",
				"ec2:DescribeSpotInstanceRequests",
				"ec2:DescribeSnapshots",
				"ec2:CreateVolume",
				"ec2:DetachVolume"
			],
			"Resource": "*"
		},
		{
			"Effect": "Allow",
			"Action": [
				"s3:ListBucket"
			],
			"Resource": ["arn:aws:s3:::${BUCKET_NAME}"]
		},
        {
          "Effect": "Allow",
          "Action": [
            "s3:PutObject",
            "s3:GetObject",
            "s3:DeleteObject"
          ],
          "Resource": ["arn:aws:s3:::${BUCKET_NAME}/*"]
        }
	]
}